<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 被按下去 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
        <solid android:color="#33000000"/>
        <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        <corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomRightRadius="10dip" android:bottomLeftRadius="10dip" />
        <stroke android:width="0.5px" android:color="#696969" />
    </shape></item>
    <!-- 一般情况 -->
    <item><shape android:shape="rectangle">
        <solid android:color="#22000000"/>
        <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        <corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomRightRadius="10dip" android:bottomLeftRadius="10dip" />
        <stroke android:width="0.5px" android:color="#696969" />
    </shape></item>

</selector>